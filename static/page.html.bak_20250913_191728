    <script>
        // NUCLEAR JAVASCRIPT BLOCKING - Prevent ALL Framer edit functionality
        (function() {
            // Block all framer.com and framer.link URLs
            const blockedPatterns = [
                /framer\.com/,
                /framer\.link/,
                /Vu5MARe/,
                /jsW9dZSlNsDSxsubEa0g/,
                /duplicate/,
                /node=augiA20Il/
            ];

            // Override window.open
            const originalOpen = window.open;
            window.open = function(url, ...args) {
                if (url && blockedPatterns.some(pattern => pattern.test(url))) {
                    console.log("Blocked Framer URL:", url);
                    openAuthModal(); // Redirect to auth modal instead
                    return null;
                }
                return originalOpen.apply(this, [url, ...args]);
            };

            // Override location changes
            const originalAssign = window.location.assign;
            window.location.assign = function(url) {
                if (blockedPatterns.some(pattern => pattern.test(url))) {
                    console.log("Blocked location change:", url);
                    openAuthModal(); // Redirect to auth modal instead
                    return;
                }
                return originalAssign.call(this, url);
            };

            // Remove all edit buttons every 100ms
            setInterval(function() {
                document.querySelectorAll(`
                    [data-framer-name*="edit"],
                    [data-framer-name*="Edit"],
                    [data-framer-name*="secondary cta"],
                    [data-framer-name*="call-to-actions"],
                    a[href*="framer.link"],
                    a[href*="framer.com"],
                    .framer-gosiQ,
                    #__framer-badge-container
                `).forEach(el => {
                    el.style.display = 'none';
                    el.remove();
                });
            }, 100);
        })();

        console.log('ANWALTS.AI landing page loaded successfully');

        function openAuthModal() {
            console.log('Opening auth modal');
            document.getElementById('authModal').classList.remove('hidden');
            document.getElementById('authModal').classList.add('flex');
        }

        function closeAuthModal() {
            console.log('Closing auth modal');
            document.getElementById('authModal').classList.add('hidden');
            document.getElementById('authModal').classList.remove('flex');
        }

        function handleSignUp(event) {
            event.preventDefault();
            console.log('Sign up submitted - redirecting to dashboard');
            closeAuthModal();
            // Redirect to your customized dashboard
            window.location.href = '/dashboard';
        }

        function switchToSignIn() {
            console.log('Switching to sign in mode');
            // For now just redirect to dashboard - you can customize this later
            window.location.href = '/dashboard';
        }

        // Test all button functionality
        document.addEventListener('DOMContentLoaded', function() {
            console.log('DOM loaded, all functions working');
            
            // Block any remaining Framer elements on load
            document.querySelectorAll('a[href*="framer"], button[onclick*="framer"]').forEach(el => {
                el.addEventListener('click', function(e) {
                    e.preventDefault();
                    e.stopPropagation();
                    openAuthModal();
                });
            });
        });
    </script>

<script>(function(){
  function bridgeOpenAuth(){
    try{ if(window.parent && typeof window.parent.openAuthModal==="function") window.parent.openAuthModal(); }catch(e){}
    try{ if(window.parent) window.parent.postMessage({type:"openSignInModal", from:"framer-landing"}, "*"); }catch(e){}
  }
  // Override local openAuthModal to call parent first, then fallback
  (function(){
    var orig = window.openAuthModal;
    window.openAuthModal = function(){ try{ bridgeOpenAuth(); }catch(e){} try{ if(typeof orig==="function") return orig.apply(this, arguments); }catch(e){} };
  })();
  // Intercept CTA anchors
  document.addEventListener("click", function(e){
    try{
      var t=e.target; var a=t && t.closest ? t.closest("a") : null; if(!a) return;
      var href=(a.getAttribute("href")||"").toLowerCase(); var txt=(a.textContent||"").toLowerCase();
      if(href.indexOf("framer.")!==-1 || href.indexOf("framerlink")!==-1 || href.indexOf("framerusercontent")!==-1 || href.indexOf("login")!==-1 || href.indexOf("registrieren")!==-1 || href.charAt(0)=="#" || txt.indexOf("registrieren")!==-1 || txt.indexOf("anmelden")!==-1 || txt.indexOf("login")!==-1){
        e.preventDefault(); e.stopPropagation(); bridgeOpenAuth();
      }
    }catch(_){ }
  }, true);
})();</script>
