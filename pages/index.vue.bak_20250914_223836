:global(a[href*="framer.com"]),
:global(a[href*="Vu5MARe"]),
:global(a[href*="jsW9dZSlNsDSxsubEa0g"]),
:global(a[href*="duplicate"]),
:global(a[href*="node=augiA20Il"]),
:global(a[target="_blank"][rel="noopener"]),
:global(.framer-badge),
:global(.framer-edit-button),
:global(.framer-gosiQ),
:global([class*="framer-badge"]),
:global([class*="edit-button"]),
:global([class*="framer-gosiQ"]),
:global([id*="framer-badge"]),
:global([id*="edit-button"]) {
  display: none !important;
